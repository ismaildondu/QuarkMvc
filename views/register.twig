
{% include 'menu.twig' %}

<div class="container mt-5">
    <div class="row">
        <div class="col-16">
            <h1>Demo Form </h1>

        <div class="col-12 d-flex justify-content-center align-items-center mt-5">
            <div class="col-6">
            <form action="/register" method="POST">
                <div class="form-group">
                    <label for="exampleInputPassword1">Name</label>
                    <input name="name" value="{{ post["name"] }}" type="text" class="form-control" id="exampleInputPassword1" placeholder="Name">
                    {% if error %}
                            {% for err in error["name"] %}
                                <p class="text-danger">* {{err}}</p>
                            {% endfor %}
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Surname</label>
                    <input name="surname" type="text" value="{{ post["surname"] }}" class="form-control" id="exampleInputPassword1" placeholder="Surname">
                    {% if error %}
                        {% for err in error["surname"] %}
                            <p class="text-danger">* {{err}}</p>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input name="email" type="email" value="{{ post["email"] }}" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                    {% if error %}
                        {% for err in error["email"] %}
                            <p class="text-danger">* {{err}}</p>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    <input name="username" type="text" value="{{ post["username"] }}" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter username">
                    {% if error %}
                        {% for err in error["username"] %}
                            <p class="text-danger">* {{err}}</p>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input name="password" type="password"  class="form-control" id="exampleInputPassword1" placeholder="Password">
                    {% if error %}
                        {% for err in error["password"] %}
                            <p class="text-danger">* {{err}}</p>
                        {% endfor %}
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password Again</label>
                    <input name="password2" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    {% if error %}
                        {% for err in error["passwordConfirm"] %}
                            <p class="text-danger">* {{err}}</p>
                        {% endfor %}
                    {% endif %}
                </div>

                <input type="hidden" name="token" value="{{token}}">
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            </div>
        </div>

        </div>
    </div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>